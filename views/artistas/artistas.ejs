<!DOCTYPE html>
<html>
  <head>
    <title>Catalogo de Musicas</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
      integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container">
      <%- include ('../partials/navbar');%>
      <h3 class="title__h3">Artistas Cadastrados</h3>
      <br />
      <a href="/artistas/novo" class="btn btn-success">Novo Artista</a
      ><br /><br />
      <table class="table table-striped table__style">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Site</th>
          </tr>
        </thead>
        <tbody>
          <% artistas.forEach(function(artista){ %>
          <tr>
            <td><%=artista.id %></td>
            <td><%=artista.nome %></td>
            <td><%=artista.site %></td>
            <td>
              <a
                href="/artistas/editar/<%=artista.id%>"
                class="fas fa-edit"
                style="color: #28a745"
                ata-toggle="tooltip"
                title="Editar Artista"
              ></a>
            </td>
            <td>
              <a
                href="/artistas/excluir/<%=artista.id%>"
                class="fas fa-trash"
                style="color: #28a745"
                ata-toggle="tooltip"
                title="Excluir artistas"
                onclick=" return confirm('Confirma a ExclusÃ£o?')"
              ></a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
